{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "copymanga",
  "version": "0.1.2",
  "identifier": "io.github.caolib.copymanga",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "copymanga",
        "width": 1000,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "languages": [
          "SimpChinese",
          "English",
          "TradChinese"
        ],
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico"
      },
      "wix": {
        "language": [
          "zh-CN",
          "en-US",
          "zh-TW"
        ]
      }
    }
  }
}